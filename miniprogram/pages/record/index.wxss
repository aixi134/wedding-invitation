/* 通用样式 */
.container {
  padding: 16rpx;
  background-color: #F7F8FA; /* 轻微的灰色背景 */
  font-family: 'San Francisco', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 16rpx;
}

.search-input {
  display: flex;
  align-items: center;
  border-radius: 25rpx;
  padding: 12rpx 18rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input input {
  flex: 1;
  height: 40rpx;
  font-size: 28rpx;
  border: none;
  outline: none;
  padding-left: 12rpx;
  color: #333;
}

.search-icon, .clear-icon {
  font-size: 28rpx;
  cursor: pointer;
  color: #888;
  transition: color 0.3s ease;
}

.search-icon:hover, .clear-icon:hover {
  color: #007aff; /* 苹果蓝色 */
}

/* 非管理员提示 */
.no-permission {
  text-align: center;
  padding: 60rpx 0;
}

.permission-tip {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.permission-desc {
  font-size: 28rpx;
  color: #666;
}

/* 管理员界面 */
.manager-view {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.stats {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f0f0f5;
  border-bottom: 1rpx solid #e0e0e0;
}

.welcome-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.stats-text {
  font-size: 24rpx;
  color: #666;
}

/* 访客列表 */
.record-list {
  height: calc(100vh - 320rpx);
  overflow-y: auto;
  padding: 0 16rpx 60rpx;
}

.record-item {
  background-color: #fff;
  margin: 12rpx 0;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.item-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background-color: #f4f5f7;
}

.header-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tag-group {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
}

.visitor-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2933;
}

.visit-time {
  font-size: 24rpx;
  color: #65748b;
}

.visit-count {
  font-size: 24rpx;
  color: #3c6ff0;
  background-color: rgba(60, 111, 240, 0.08);
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
}

.auth-tag {
  font-size: 22rpx;
  color: #0f9d58;
  background-color: rgba(15, 157, 88, 0.12);
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  gap: 16rpx;
}

.label {
  flex-shrink: 0;
  font-size: 24rpx;
  color: #8891a7;
}

.value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  word-break: break-all;
}

.item-footer {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f1f2f6;
  padding-top: 16rpx;
}

.create-time {
  font-size: 22rpx;
  color: #98a1b3;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 60rpx 0;
}

.empty-image {
  width: 80rpx;
  height: 80rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #888;
  margin-top: 20rpx;
}

/* 加载和无更多数据 */
.loading, .no-more {
  text-align: center;
  font-size: 24rpx;
  color: #aaa;
  padding: 20rpx 0;
}
